<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_logo" />

        <!--        START-->

        <!--Nom-->
        <LinearLayout
            android:id="@+id/profile_layout_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="@string/last_name"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp"
                />
        </LinearLayout>
        <!--Prenom-->
        <LinearLayout
            android:id="@+id/profile_layout_prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/PrimaryText"
                android:text="@string/first_name"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp" />
        </LinearLayout>
        <!--Username-->
        <LinearLayout
            android:id="@+id/profile_layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Username"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp" />
        </LinearLayout>
        <!--Email-->
        <LinearLayout
            android:id="@+id/profile_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Email"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp" />
        </LinearLayout>
        <!--Password-->
        <LinearLayout
            android:id="@+id/profile_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/password"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp" />
        </LinearLayout>
        <!--Ville-->
        <LinearLayout
            android:id="@+id/profile_layout_ville"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/city"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_ville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp" />
        </LinearLayout>
        <!--Address-->
        <LinearLayout
            android:id="@+id/profile_layout_adresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/address"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp" />
        </LinearLayout>
<!--      Telephone-->
        <LinearLayout
            android:id="@+id/profile_layout_numTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/numTel"
                android:textColor="@color/PrimaryText"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/profile_input_numTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SecondaryText"
                android:textColor="@color/SecondaryText"
                android:textSize="22sp" />
        </LinearLayout>


        <!--        END-->
    </LinearLayout>


</ScrollView>


