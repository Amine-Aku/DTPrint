<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:id="@+id/order_detail_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/order_detail_product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:src="@drawable/ic_logo" />

        <ProgressBar
            android:id="@+id/progress_bar_detail"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"/>

        <!--        START-->

        <!--Product Name-->
        <LinearLayout
            android:id="@+id/order_detail_layout_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/product_name_order"
                android:textColor="@color/colorAccentLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_detail_view_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccentLight"
                android:textColor="@color/PrimaryText"
                android:textSize="20sp" />
        </LinearLayout>
        <!--  Price-->
        <LinearLayout
            android:id="@+id/order_detail_layout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/colorAccentLight"
                android:text="@string/price_order"
                android:textColor="@color/colorAccentLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_detail_view_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccentLight"
                android:textColor="@color/PrimaryText"
                android:textSize="20sp" />
        </LinearLayout>

<!--  Product  Details-->
        <!--        Documents-->
        <LinearLayout
            android:id="@+id/order_detail_document_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Format -->
            <LinearLayout
                android:id="@+id/order_detail_layout_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/format"
                    android:textColor="@color/colorAccentLight"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/order_detail_view_format"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccentLight"
                    android:textColor="@color/PrimaryText"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--DoubleFace-->
            <LinearLayout
                android:id="@+id/order_detail_layout_doubleFace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/doubleface"
                    android:textColor="@color/colorAccentLight"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/order_detail_doubleFace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccentLight"
                    android:textColor="@color/PrimaryText"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <!--        Goodies-->
        <LinearLayout
            android:id="@+id/order_detail_goodie_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Type-->
            <LinearLayout
                android:id="@+id/order_detail_layout_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/goodie_type"
                    android:textColor="@color/colorAccentLight"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/order_detail_view_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccentLight"
                    android:textColor="@color/PrimaryText"
                    android:textSize="20sp" />
            </LinearLayout>




        </LinearLayout>


        <!--    qtt -->
        <LinearLayout
            android:id="@+id/order_detail_layout_qtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/qtt"
                android:textColor="@color/colorAccentLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_detail_numPicker_qtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccentLight"
                android:inputType="number"
                android:textColor="@color/PrimaryText"
                android:textSize="20sp" />
        </LinearLayout>

        <!--    Commentaire / Note-->
        <LinearLayout
            android:id="@+id/order_detail_layout_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/note"
                android:textColor="@color/colorAccentLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_detail_view_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccentLight"
                android:textColor="@color/PrimaryText"
                android:textSize="20sp" />
        </LinearLayout>

        <!--@ de Livraison-->
        <LinearLayout
            android:id="@+id/order_detail_layout_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/shipping_address"
                android:textColor="@color/colorAccentLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/order_detail_view_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccentLight"
                android:textColor="@color/PrimaryText"
                android:textSize="20sp"/>
        </LinearLayout>


        <!--Prix Total-->
        <LinearLayout
            android:id="@+id/order_detail_layout_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_label_detail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/total"
                android:textColor="@color/colorAccentLight"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_detail_view_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccentLight"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!--        END-->
    </LinearLayout>


</ScrollView>



